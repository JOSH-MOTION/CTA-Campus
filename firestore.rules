rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the requesting user has a specific role.
    function isRequesterRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Rules for the users collection
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId 
                          || isRequesterRole('teacher') 
                          || isRequesterRole('admin');

      // Rules for the points subcollection within each user
      match /points/{pointId} {
        allow read, create, update, delete: if request.auth.uid == userId 
                                            || isRequesterRole('teacher') 
                                            || isRequesterRole('admin');
      }

      // Rules for other subcollections can be added here
    }

    // Rules for other top-level collections
    match /announcements/{announcementId} {
      allow read: if true; // Allow all authenticated users to read announcements
      allow create, update, delete: if isRequesterRole('teacher') || isRequesterRole('admin');
    }
    
    match /assignments/{assignmentId} {
      allow read: if true;
      allow create, update, delete: if isRequesterRole('teacher') || isRequesterRole('admin');
    }

    match /exercises/{exerciseId} {
        allow read: if true;
        allow create, update, delete: if isRequesterRole('teacher') || isRequesterRole('admin');
    }

    match /projects/{projectId} {
        allow read: if true;
        allow create, update, delete: if isRequesterRole('teacher') || isRequesterRole('admin');
    }

    match /resources/{resourceId} {
        allow read: if true;
        allow create, update, delete: if isRequesterRole('teacher') || isRequesterRole('admin');
    }

    match /materials/{materialId} {
        allow read: if true;
        allow create, update, delete: if isRequesterRole('teacher') || isRequesterRole('admin');
    }
    
    match /submissions/{submissionId} {
        allow read: if isRequesterRole('teacher') || isRequesterRole('admin');
        allow create: if request.auth.uid != null;
        allow delete: if isRequesterRole('teacher') || isRequesterRole('admin');
    }
    
     match /roadmap_status/{weekId} {
      allow read: if true;
      allow write: if isRequesterRole('teacher') || isRequesterRole('admin');
    }

    match /chats/{chatId}/{message=**} {
      allow read, write: if request.auth.uid != null; // Allow any authenticated user to read/write chat messages
    }
    
    match /notifications/{notificationId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
}
