
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isStaff() {
      // Check the role of the user making the request.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin'];
    }

    match /users/{userId} {
      // A user can manage their own document, or a staff member can.
      allow read, write: if request.auth.uid == userId || isStaff();
      
      match /points/{pointId} {
        // A user can manage their own points, or a staff member can.
        allow read, write, delete: if request.auth.uid == userId || isStaff();
      }

      match /notifications/{notificationId} {
        // A user can manage their own notifications, or a staff member can.
        allow read, write, delete: if request.auth.uid == userId || isStaff();
      }
    }

    match /chats/{chatId}/{message=**} {
      // Anyone authenticated can read/write to any chat.
      allow read, write: if request.auth != null;
    }

    match /submissions/{submissionId} {
      // Allow any authenticated user to create a submission.
      // The backend service ensures they can only create submissions for themselves.
      allow create: if request.auth != null;
      // Allow only staff to read, update, or delete any submission.
      allow read, update, delete: if isStaff();
    }

    match /announcements/{announcementId} {
        // Any authenticated user can read.
        allow read: if request.auth != null;
        // Only staff can create, update, or delete.
        allow write: if isStaff();
    }
    
    match /assignments/{assignmentId} {
        allow read: if request.auth != null;
        allow write: if isStaff();
    }

    match /exercises/{exerciseId} {
        allow read: if request.auth != null;
        allow write: if isStaff();
    }
    
    match /projects/{projectId} {
        allow read: if request.auth != null;
        allow write: if isStaff();
    }

    match /resources/{resourceId} {
        allow read: if request.auth != null;
        allow write: if isStaff();
    }
    
    match /materials/{materialId} {
        allow read: if request.auth != null;
        allow write: if isStaff();
    }

    match /roadmap_status/{weekId} {
        allow read: if request.auth != null;
        allow write: if isStaff();
    }
  }
}
