rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get the user's role from the 'users' collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return getUserRole(userId) == 'admin';
    }

    // Helper function to check if a user is a teacher
    function isTeacher(userId) {
      return getUserRole(userId) == 'teacher';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles (for directory, etc.)
      allow read: if isAuthenticated();
      // A user can only create or update their own profile
      allow write: if request.auth.uid == userId;

      // Rules for the points subcollection
      match /points/{pointId} {
        // A user can only read their own points
        allow read: if isAuthenticated() && request.auth.uid == userId;
        // Only the user themselves (client-side) can add points.
        // In a production app, this would be locked down to a backend service role.
        allow create: if isAuthenticated() && request.auth.uid == userId;
        // Points are immutable once awarded
        allow update, delete: if false;
      }
    }

    // Generic rules for content collections
    function canWriteContent() {
      return isAuthenticated() && (isTeacher(request.auth.uid) || isAdmin(request.auth.uid));
    }

    function isAuthorOrAdmin() {
       return isAuthenticated() && (resource.data.authorId == request.auth.uid || isAdmin(request.auth.uid));
    }

    match /announcements/{announcementId} {
        allow read: if isAuthenticated();
        allow create: if canWriteContent();
        allow update, delete: if isAuthorOrAdmin();
    }
    
    match /assignments/{assignmentId} {
        allow read: if isAuthenticated();
        allow create: if canWriteContent();
        allow update, delete: if isAuthorOrAdmin();
    }

    match /exercises/{exerciseId} {
        allow read: if isAuthenticated();
        allow create: if canWriteContent();
        allow update, delete: if isAuthorOrAdmin();
    }

    match /projects/{projectId} {
        allow read: if isAuthenticated();
        allow create: if canWriteContent();
        allow update, delete: if isAuthorOrAdmin();
    }
    
    // Rules for the 'materials' collection
    match /materials/{materialId} {
        allow read: if isAuthenticated();
        allow create: if canWriteContent();
        allow update, delete: if false;
    }

    // Rules for the 'chats' collection
    match /chats/{chatId}/messages/{messageId} {
        // Allow read/create if the user is part of the chat.
        // For DMs, the chatId is 'uid1-uid2'. For groups, it's 'group-genName'.
        allow read, create: if isAuthenticated() && 
                            (request.auth.uid in chatId.split('-') || 
                             (chatId.startsWith('group-') && getUserRole(request.auth.uid) != null));
                             
        // Allow update/delete only if the user is the sender of the message.
        allow update, delete: if isAuthenticated() && resource.data.senderId == request.auth.uid;
    }
  }
}
