rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles
    function isStaff() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin'];
    }

    function isStudent() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Allow user to update their own profile, but not their role or points.
      // Allow staff to update any profile.
      allow update: if (isOwner(userId) && !('role' in request.resource.data) && !('totalPoints' in request.resource.data)) || isStaff();
    }
    
    match /users/{userId}/points/{pointId} {
        // Points can only be written by staff, or by a student creating a log for themselves.
        // Students cannot update or delete points once created.
        allow read: if isOwner(userId) || isStaff();
        allow create: if isOwner(userId) || isStaff();
        allow update, delete: if isStaff();
    }

    match /submissions/{submissionId} {
      allow read, list: if isStaff() || (request.auth.uid == resource.data.studentId);
      // Students can create submissions for themselves. Staff can create submissions too.
      allow create: if (request.auth.uid == request.resource.data.studentId) || isStaff();
      // Only staff can delete submissions.
      allow delete: if isStaff();
      allow update: if isStaff(); // Allow staff to update submissions if needed
    }

    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if isStaff();
    }

    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow write: if isStaff();
    }

    match /exercises/{exerciseId} {
      allow read: if request.auth != null;
      allow write: if isStaff();
    }
    
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if isStaff();
    }

    match /resources/{resourceId} {
      allow read: if request.auth != null;
      allow write: if isStaff();
    }

    match /materials/{materialId} {
        allow read: if request.auth != null;
        allow write: if isStaff();
    }

    match /roadmap_status/{weekId} {
        allow read: if true;
        allow write: if isStaff();
    }
    
    match /chats/{chatId}/{message=**} {
      allow read, write: if request.auth != null;
    }
    
    match /notifications/{notificationId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
}
