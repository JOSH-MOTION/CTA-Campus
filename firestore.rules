rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if the requesting user is an admin or a teacher.
    function isTeacherOrAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'teacher'];
    }

    match /users/{userId} {
      // Users can read and update their own main document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow users to be created.
      allow create: if request.auth != null;
      
      // Teachers and Admins can read the list of all users.
      allow list: if request.auth != null && isTeacherOrAdmin();
       // Teachers and Admins can read any specific user's document.
      allow get: if request.auth != null && (request.auth.uid == userId || isTeacherOrAdmin());

      // Rules for the points subcollection.
      match /points/{pointId} {
        // Any authenticated user can read their own points.
        allow read: if request.auth != null && request.auth.uid == userId;
        // Only teachers and admins can create, update, or delete points for any user.
        allow write, delete: if request.auth != null && isTeacherOrAdmin();
      }
    }

    // Rules for all other collections.
    match /announcements/{announcementId} {
      allow read, write: if request.auth != null && isTeacherOrAdmin();
      allow list: if request.auth != null;
    }

    match /assignments/{assignmentId} {
      allow read, write: if request.auth != null && isTeacherOrAdmin();
      allow list: if request.auth != null;
    }
    
    match /exercises/{exerciseId} {
      allow read, write: if request.auth != null && isTeacherOrAdmin();
      allow list: if request.auth != null;
    }
    
    match /projects/{projectId} {
      allow read, write: if request.auth != null && isTeacherOrAdmin();
      allow list: if request.auth != null;
    }
    
    match /resources/{resourceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isTeacherOrAdmin();
    }
    
    match /materials/{materialId} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && isTeacherOrAdmin();
    }

    match /submissions/{submissionId} {
      allow read, write: if request.auth != null;
      allow list: if request.auth != null && isTeacherOrAdmin();
    }
    
    match /roadmap_status/{weekId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isTeacherOrAdmin();
    }
    
    match /notifications/{notificationId} {
       allow read, write: if request.auth != null;
    }
    
    match /chats/{chatId}/{message=**} {
      allow read, write: if request.auth != null;
    }
  }
}