
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTeacherOrAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin'];
    }

    function isStudent() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }

    match /users/{userId} {
      // Users can read their own profile, teachers/admins can read anyone's
      allow read: if isOwner(userId) || isTeacherOrAdmin();
      // Users can update their own profile
      allow write: if isOwner(userId);

      // Rules for the points subcollection
      match /points/{pointId} {
        // Students can read their own points. Teachers/admins can read/write points for any user.
        allow read, write: if isTeacherOrAdmin();
        allow read: if isOwner(userId);
      }
    }

    match /chats/{chatId}/{message=**} {
      // Anyone authenticated can read/write to any chat.
      // More specific rules could be implemented if needed (e.g. check for chat membership)
      allow read, write: if request.auth != null;
    }

    match /announcements/{announcementId} {
        // Anyone authenticated can read announcements
        allow read: if request.auth != null;
        // Only teachers or admins can create, update, or delete them
        allow write: if isTeacherOrAdmin();
    }
    
    match /assignments/{assignmentId} {
        allow read: if request.auth != null;
        allow write: if isTeacherOrAdmin();
    }

    match /exercises/{exerciseId} {
        allow read: if request.auth != null;
        allow write: if isTeacherOrAdmin();
    }

    match /projects/{projectId} {
        allow read: if request.auth != null;
        allow write: if isTeacherOrAdmin();
    }

    match /resources/{resourceId} {
        allow read: if request.auth != null;
        allow write: if isTeacherOrAdmin();
    }
    
    match /materials/{materialId} {
        allow read: if request.auth != null;
        allow write: if isTeacherOrAdmin();
    }

    match /roadmap_status/{weekId} {
        allow read: if request.auth != null;
        allow write: if isTeacherOrAdmin();
    }

    match /submissions/{submissionId} {
        // Teachers and admins can read all submissions
        allow read: if isTeacherOrAdmin();
        // A student can read their own submissions
        allow read: if request.auth.uid == resource.data.studentId;
        
        // Students can create submissions for themselves
        allow create: if isStudent() && request.auth.uid == request.resource.data.studentId;
        // Teachers and admins can delete submissions
        allow delete: if isTeacherOrAdmin();
    }
  }
}
